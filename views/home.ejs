<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>URL Shortener</title>
  </head>
  <body>
    <h1>URL Shortener</h1>

    <% if (urls && urls.length > 0) { %>
    <table border="1">
      <thead>
        <tr>
          <th>Short URL</th>
          <th>Original URL</th>
          <th>Visit History</th>
        </tr>
      </thead>
      <tbody>
        <% urls.forEach(url => { %>
        <tr>
          <td><a href="/url/<%= url.shortId %>"><%= url.shortId %></a></td>
          <td><%= url.redirectURL %></td>
          <td>
            <ul>
              <% url.visitHistory.forEach(visit => { %>
              <li><%= new Date(visit.timestamp).toLocaleString() %></li>
              <% }) %>
            </ul>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    <% } else { %>
    <p>No URLs available</p>
    <% } %>
  </body>
</html>
